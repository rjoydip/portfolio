---
import Divider from "../components/Divider.astro" 
import { githubLink, linkedinLink, xLink } from "../content/links";
import profile from '../content/profile.yml';
import Layout from "../layouts/Layout.astro";

const socialMedia = [
	{
		link: githubLink,
		icon: "i-myna-brand-github",
		name: "Github",
	},
	{
		link: linkedinLink,
		icon: "i-myna-brand-facebook",
		name: "Linkedin",
	},
	{
		link: xLink,
		icon: "i-myna-brand-x",
		name: "Twitter",
	},
];

const numberOfYears = new Date().getFullYear() - 2016
---

<Layout
	title="Joydip"
	description={profile.summary_main}
>
	<div class="flex items-center justify-center min-h-70vh p-4">
		<div class="w-full grid gap-3 max-w-xl slide-enter-content">
			<h1 class="dark:text-#e5e7eb text-4xl font-bold item">
				Joydip<span class="text-sm font-normal opacity-75 ml-2"
					>or <span class="bold underline">rjoydip</span></span
				>
			</h1>
			<p>Hi, I am Joydip Roy<!-- , working at <a
				href={techMLink}
				class="font-bold transition-all duration-300 ease-in-out hover:(opacity-100 bg-#8882) opacity-90"
				rel="external nofollow noopener noreferrer">{profile.working_at}</a
			> --></p>
			<Divider />
			<Fragment>
				<p>
					<Fragment set:html={profile.summary_main.replace("{{numberOfYears}}", numberOfYears)} />  <a href="/projects" class="underline">projects here</a>.
				</p>
				<p>
					<Fragment set:html={profile.summary_additional} />
				</p>
				<p>
					<Fragment set:html={profile.summary_others} />
				</p>
				<p>
					Right now I live in <span class="font-bold text-sm">Kolkata, India</span>. If you are around, feel free to
					reach me out
				</p>
			</Fragment>
			<Divider />
			<div class="text-sm">
				<p>Find me on</p>
				<div class="flex items-start justify-start gap-4 mt-2">
					{
						socialMedia.map((url) => (
							<a
								href={url.link}
								class="flex items-center justify-center gap-2 transition-all duration-300 ease-in-out"
								target="_blank"
								rel="external nofollow noopener noreferrer"
							>
								<span
									class:list={[
										url.icon,
										"inline-block",
										"w-4",
										"h-4",
									]}
								/>
								{url.name}
							</a>
						))
					}
				</div>
				<div class="mt-2">
					Or mail me at <span>joydipand@gmail.com</span>
				</div>
			</div>
		</div>
	</div>
</Layout>
